{
  "name": "FOS",
  "version": "",
  "author": "Keith Showalter",
  "description": "Fortress of solitude simulator",
  "scripts": {
    "nodemon": "nodemon server.js",
    "webpack_serve": "webpack-dev-server --content-base public/ --inline --hot -d",
    "webpack": "webpack --progress --colors --watch -d",
    "watchify": "watchify main.js -o index.js -d -v",
    "babelify": "watchify -t babelify main.js -o index.js -d -v",
    "babel": "babel main.es6 --watch --out-file index.js --source-maps"
  },
  "dependencies": {
    "lodash": "latest",
    "moment": "latest",
    "jquery": "latest",
    "brfs": "latest",
    "three": "latest",
    "math": "latest",
    "seedrandom": "latest"
  },
  "jshintConfig": {
    "node": true,
    "browser": true,
    "esnext": true,
    "funcscope": true,
    "sub": true,
    "globals": {
      "g": true,
      "$": true,
      "_": true,
      "moment": true,
      "math": true
    }
  },
  "devDependencies": {
    "webpack": "latest",
    "webpack-dev-server": "latest"
  }
}
